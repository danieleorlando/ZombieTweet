<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/image_avater_zombie"
        android:layout_height="@dimen/image_avater_zombie"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/item_author"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_image"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/float_label"
        android:textSize="20dp"
        android:text="fdffddfdf"
        />

    <TextView
        android:id="@+id/item_text"
        android:layout_below="@+id/item_author"
        android:layout_toRightOf="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:text="fdfdfd"/>


    <TextView
        android:id="@+id/item_created"
        android:layout_below="@+id/item_text"
        android:layout_toRightOf="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical|right"
        android:text="fdfdfd"
        android:textSize="10dp"
        />

    </RelativeLayout>
